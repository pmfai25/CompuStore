<UserControl x:Class="CompuStore.Purchases.Views.PurchasesMain"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"             
             prism:ViewModelLocator.AutoWireViewModel="True">
    <DockPanel LastChildFill="True">
        <ToolBar  DockPanel.Dock="Top" ToolBarTray.IsLocked="True">
            <Button Command="{Binding AddCommand}">Purchases</Button>
            <Button Command="{Binding EditCommand}">Edit</Button>
            <Button Command="{Binding DeleteCommand}">Delete</Button>
            <Separator></Separator>
            <Label >Search By Phone</Label>
            <TextBox Width="150" Text="{Binding Path=SelectedClient.Name}" VerticalAlignment="Top"></TextBox>
            <Button>Search</Button>
        </ToolBar>

    </DockPanel>
</UserControl>
