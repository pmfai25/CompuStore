<Controls:MetroWindow x:Class="CompuStore.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:prism="http://prismlibrary.com/"
        xmlns:infrastrucure="clr-namespace:CompuStore.Infrastructure;assembly=CompuStore.Infrastructure"
        prism:ViewModelLocator.AutoWireViewModel="True"        
        Title="{Binding Title}" Height="600" Width="800"
        ResizeMode="CanResizeWithGrip" WindowStartupLocation="CenterScreen"
        GlowBrush="{DynamicResource AccentColorBrush}" BorderThickness="1" Icon="/CompuStore;component/MainIcon.ico">
    <Window.Resources>
        <Style x:Key="TabButton" TargetType="Button">
            <Setter Property="Height" Value="80"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="#CC119EDA"/>
            <Setter Property="Foreground" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="true">
                    <Setter Property="Background" Value="White"/>
                    <Setter Property="Foreground" Value="#CC119EDA"/>
                    <Setter Property="FontSize" Value="14"/>
                    <Setter Property="BorderBrush" Value="#CC119EDA"/>                    
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Controls:MetroWindow.RightWindowCommands>
        <Controls:WindowCommands>
            <Button>
                <StackPanel Orientation="Horizontal">
                    <Rectangle Width="20"
                   Height="20"
                   Fill="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}">
                        <Rectangle.OpacityMask>
                            <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_settings}" />
                        </Rectangle.OpacityMask>
                    </Rectangle>
                    <TextBlock Margin="4 0 0 0"
                   VerticalAlignment="Center"
                   Text="Settings" />
                </StackPanel>
            </Button>
        </Controls:WindowCommands>
    </Controls:MetroWindow.RightWindowCommands>

    <DockPanel LastChildFill="True">
        <Image Width="auto" Stretch="Fill" Height="150" Source="{StaticResource Logo}" DockPanel.Dock="Top"></Image>
        <Border Margin="1, 0, 0 ,0" Width="200" CornerRadius="5" BorderThickness="2" BorderBrush="{DynamicResource AccentColorBrush}" DockPanel.Dock="Left">
            <StackPanel Orientation="Vertical">
                <Button Command="{Binding SuppliersCommand}" Style="{StaticResource TabButton}">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Stretch" Width="170">
                            <Rectangle Width="40" HorizontalAlignment="Left"
                   Height="40"
                   Fill="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}">
                                <Rectangle.OpacityMask>
                                    <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_store}" />
                                </Rectangle.OpacityMask>
                            </Rectangle>
                            <TextBlock Margin="10,0,10,0" HorizontalAlignment="Center" VerticalAlignment="Center">Purchases</TextBlock>

                        </StackPanel>
                    </Button.Content>
                </Button>
                <Button Command="{Binding ClientsCommand}" Style="{StaticResource TabButton}">
                    <Button.Content >
                        <StackPanel Orientation="Horizontal" Width="170">
                            <Rectangle Width="40" HorizontalAlignment="Left"
                   Height="40"
                   Fill="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}">
                                <Rectangle.OpacityMask>
                                    <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_user}" />
                                </Rectangle.OpacityMask>
                            </Rectangle>
                            <TextBlock Margin="20,0,5,0" HorizontalAlignment="Center" VerticalAlignment="Center">Sales</TextBlock>

                        </StackPanel>
                    </Button.Content>
                </Button>
                <Button Style="{StaticResource TabButton}">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Stretch" Width="170">
                            <Rectangle Width="40" HorizontalAlignment="Right"
                   Height="40"
                   Fill="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}">
                                <Rectangle.OpacityMask>
                                    <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_laptop}" />
                                </Rectangle.OpacityMask>
                            </Rectangle>
                            <TextBlock Margin="20,0,5,0" HorizontalAlignment="Center" VerticalAlignment="Center">Store</TextBlock>
                            
                        </StackPanel>
                    </Button.Content>
                </Button>
                <Button  Style="{StaticResource TabButton}" Background="#CC119EDA">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Stretch" Width="170">
                            <Rectangle Width="40" HorizontalAlignment="Right"
                   Height="40"
                   Fill="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}">
                                <Rectangle.OpacityMask>
                                    <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_cabinet_files}" />
                                </Rectangle.OpacityMask>
                            </Rectangle>
                            <TextBlock Margin="20,0,5,0" HorizontalAlignment="Center" VerticalAlignment="Center">Reports</TextBlock>
                           
                        </StackPanel>
                    </Button.Content>
                </Button>
            </StackPanel>
        </Border>
        <Border CornerRadius="5" BorderThickness="2" BorderBrush="{DynamicResource AccentColorBrush}">
            <Controls:TransitioningContentControl Transition="LeftReplace"  prism:RegionManager.RegionName="{x:Static infrastrucure:RegionNames.MainContentRegion}"></Controls:TransitioningContentControl>
        </Border>
    </DockPanel>
</Controls:MetroWindow>
