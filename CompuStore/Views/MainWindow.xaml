<Controls:MetroWindow x:Class="CompuStore.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:prism="http://prismlibrary.com/"
        xmlns:infrastrucure="clr-namespace:CompuStore.Infrastructure;assembly=CompuStore.Infrastructure"
        prism:ViewModelLocator.AutoWireViewModel="True"        
        Title="{Binding Title}" Height="600" Width="800"
        ResizeMode="CanResizeWithGrip" WindowStartupLocation="CenterScreen"
        GlowBrush="{DynamicResource AccentColorBrush}" BorderThickness="1">
    <Controls:MetroWindow.RightWindowCommands>
        <Controls:WindowCommands>
            <Button>
                <StackPanel Orientation="Horizontal">
                    <Rectangle Width="20"
                   Height="20"
                   Fill="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}">
                        <Rectangle.OpacityMask>
                            <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_settings}" />
                        </Rectangle.OpacityMask>
                    </Rectangle>
                    <TextBlock Margin="4 0 0 0"
                   VerticalAlignment="Center"
                   Text="Settings" />
                </StackPanel>
            </Button>
        </Controls:WindowCommands>
    </Controls:MetroWindow.RightWindowCommands>

    <DockPanel LastChildFill="True">
        <Image Width="auto" Stretch="Fill" Height="150" Source="{StaticResource Logo}" DockPanel.Dock="Top"></Image>
        <Border Margin="1, 0, 0 ,0" Width="200" CornerRadius="5" BorderThickness="2" BorderBrush="{DynamicResource AccentColorBrush}" DockPanel.Dock="Right">
            <StackPanel Orientation="Vertical">
                <Button Command="{Binding SuppliersCommand}" Height="80" Style="{StaticResource AccentedSquareButtonStyle}" BorderThickness="1" Margin="1" FontSize="16" FontWeight="Bold">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Stretch">
                            <TextBlock Margin="0,0,5,0" HorizontalAlignment="Center" VerticalAlignment="Center">الشركات</TextBlock>
                            <Rectangle Width="40" HorizontalAlignment="Right"
                   Height="40"
                   Fill="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}">
                                <Rectangle.OpacityMask>
                                    <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_store}" />
                                </Rectangle.OpacityMask>
                            </Rectangle>
                        </StackPanel>
                    </Button.Content>
                </Button>
                <Button Command="{Binding ClientsCommand}" Height="80" Style="{StaticResource AccentedSquareButtonStyle}" Margin="1">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Stretch">
                            <TextBlock Margin="0,0,5,0" HorizontalAlignment="Center" VerticalAlignment="Center">العملاء</TextBlock>
                            <Rectangle Width="40" HorizontalAlignment="Right"
                   Height="40"
                   Fill="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}">
                                <Rectangle.OpacityMask>
                                    <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_user}" />
                                </Rectangle.OpacityMask>
                            </Rectangle>
                        </StackPanel>
                    </Button.Content>
                </Button>
                <Button Height="80" Style="{StaticResource AccentedSquareButtonStyle}" BorderThickness="1" Controls:ButtonHelper.CornerRadius="5" Margin="1">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Stretch">
                            <TextBlock Margin="0,0,5,0" HorizontalAlignment="Center" VerticalAlignment="Center">الاصناف</TextBlock>
                            <Rectangle Width="40" HorizontalAlignment="Right"
                   Height="40"
                   Fill="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}">
                                <Rectangle.OpacityMask>
                                    <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_laptop}" />
                                </Rectangle.OpacityMask>
                            </Rectangle>
                        </StackPanel>
                    </Button.Content>
                </Button>
                <Button Height="80" Style="{StaticResource AccentedSquareButtonStyle}" BorderThickness="1" Controls:ButtonHelper.CornerRadius="5" Margin="1">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Stretch">
                            <TextBlock Margin="0,0,5,0" HorizontalAlignment="Center" VerticalAlignment="Center">التقارير</TextBlock>
                            <Rectangle Width="40" HorizontalAlignment="Right"
                   Height="40"
                   Fill="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}">
                                <Rectangle.OpacityMask>
                                    <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_cabinet_files}" />
                                </Rectangle.OpacityMask>
                            </Rectangle>
                        </StackPanel>
                    </Button.Content>
                </Button>
            </StackPanel>
        </Border>
        <Border CornerRadius="5" BorderThickness="2" BorderBrush="{DynamicResource AccentColorBrush}">
            <Controls:TransitioningContentControl prism:RegionManager.RegionName="{x:Static infrastrucure:RegionNames.MainContentRegion}"></Controls:TransitioningContentControl>
        </Border>
    </DockPanel>
</Controls:MetroWindow>
