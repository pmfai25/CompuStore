<UserControl x:Class="CompuStore.Views.MainSettings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"             
             prism:ViewModelLocator.AutoWireViewModel="True">
    <StackPanel Width="300">
        <TextBlock FontSize="14" >لون الخلفية</TextBlock>
        <ComboBox ItemsSource="{Binding AppThemes, Mode=OneWay}" SelectedItem="{Binding SelectedTheme}">
            <ComboBox.ItemTemplate>
                <DataTemplate >
                    <Rectangle Width="100" Height="20" Fill="{Binding ColorBrush, Mode=TwoWay}"></Rectangle>
                </DataTemplate>
            </ComboBox.ItemTemplate>
            
        </ComboBox>
        <TextBlock >لون البرنامج</TextBlock>
        <ComboBox ItemsSource="{Binding AccentColors, Mode=TwoWay}" SelectedItem="{Binding SelectedAccent}">
            <ComboBox.ItemTemplate>
                <DataTemplate >
                    <Rectangle Width="100" Height="20" Fill="{Binding ColorBrush, Mode=OneWay}"></Rectangle>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
    </StackPanel>
</UserControl>
